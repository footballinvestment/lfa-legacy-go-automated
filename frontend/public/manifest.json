{
  "short_name": "LFA Legacy GO",
  "name": "LFA Legacy GO - Football Tournament Platform",
  "description": "Join, create, and manage football tournaments in your area. Connect with players, compete, and track your progress.",
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    },
    {
      "src": "apple-touch-icon.png",
      "type": "image/png",
      "sizes": "180x180",
      "purpose": "any"
    }
  ],
  "start_url": "/",
  "display": "standalone",
  "theme_color": "#1976d2",
  "background_color": "#ffffff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["sports", "social", "games"],
  "screenshots": [
    {
      "src": "screenshot-mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Tournament List View"
    },
    {
      "src": "screenshot-mobile-2.png", 
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Tournament Details"
    },
    {
      "src": "screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop Tournament Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Join Tournament",
      "short_name": "Join",
      "description": "Quickly join an upcoming tournament",
      "url": "/tournaments?action=join",
      "icons": [
        {
          "src": "icon-shortcut-join.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Create Tournament",
      "short_name": "Create",
      "description": "Start organizing a new tournament",
      "url": "/tournaments/create",
      "icons": [
        {
          "src": "icon-shortcut-create.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Tournaments",
      "short_name": "My Games",
      "description": "View your tournament history and upcoming games",
      "url": "/my-tournaments",
      "icons": [
        {
          "src": "icon-shortcut-my.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-tournament",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+lfa",
      "url": "/tournament/%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/import-tournament",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}