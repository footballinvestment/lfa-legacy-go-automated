[flake8]
max-line-length = 88
extend-ignore = 
    # Black compatibility
    E203, W503,
    # Too many arguments
    E501,
    # Line too long (let black handle)
    E704,
    # Multiple statements on one line
    F401,
    # Imported but unused (let autoflake handle)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    htmlcov,
    migrations

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F811,F401
    conftest.py:F401

max-complexity = 10